<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.demo.mapper.MemberMapper">

	<resultMap id="result" type="map">
		<result column="member_idX" property="memberIdx"/>
		<result column="member_id" property="memberId"/>
		<result column="member_password" property="memberPassword"/>
		<result column="member_email" property="memberEmail"/>
		<result column="member_role" property="memberRole"/>
	</resultMap>
	
	<insert id="insertMember" parameterType="com.demo.entity.MemberVO">
		INSERT INTO test_tbl (
			member_idx,
			member_id,
			member_password,
			member_email,
			member_role
		) VALUES (
			test_tbl_seq.NEXTVAL,
			#{memberId},
			#{memberPassword},
			#{memberEmail},
			#{memberRole}
		)
	</insert>
	
	<select id="getMemberList" resultMap="result">
		SELECT * FROM test_tbl ORDER BY member_idx DESC
	</select>

</mapper>