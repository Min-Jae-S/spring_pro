<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.demo.mapper.MemberMapper">

	<resultMap id="result" type="com.demo.entity.MemberVO">
		<id column="member_idx" property="memberIdx"/>
		<result column="member_id" property="memberId"/>
		<result column="member_password" property="memberPassword"/>
		<result column="member_name" property="memberName"/>
		<result column="member_email" property="memberEmail"/>
		<result column="member_role" property="memberRole"/>
	</resultMap>
	
	<insert id="insertMember" parameterType="com.demo.entity.MemberVO">
		INSERT INTO members_tbl (
			member_idx,
			member_id,
			member_password,
			member_name,
			member_email,
			member_role
		) VALUES (
			members_tbl_seq.NEXTVAL,
			#{memberId},
			#{memberPassword},
			#{memberName},
			#{memberEmail},
			#{memberRole}
		)
	</insert>
	
	<select id="getMemberList" resultMap="result">
		SELECT * FROM members_tbl ORDER BY member_idx DESC
	</select>
	
	<select id="checkLogin" parameterType="java.lang.String" resultMap="result">
		SELECT * FROM members_tbl WHERE member_id = #{memberId}
	</select>

</mapper>